<% layout("./layouts/boilerplate.ejs") %>
<body>
    <div class="row mt-3">
        <div class="col-7 offset-3"> <!-- Adjusted offset for better centering -->
            <div class="card mx-auto" style="width: 95%;"> <!-- Added mx-auto for horizontal centering -->
                <h3>Listing Details</h3>
                <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing_image" style="height: 300px; object-fit: cover;"> <!-- Set height and object-fit to maintain aspect ratio -->
                <div class="card-body">
                    <p class="card-text">
                        <b><%=listing.title%></b> <br>
                        <%=listing.description%> <br>
                        Price: &#8377; <%=listing.price.toLocaleString("en-IN") %> <br>
                        Location: <%=listing.location %>, <%=listing.country %>
                        
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="btns mb-5 offset-2">
        <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-2 edit-btn">Edit</a>
            <form action="/listings/<%=listing._id%>?_method=DELETE" method="post">
            <button class="btn btn-dark offset-5">Delete</button>
        </div>
    </div>


    
</body>
